{
  "name": "indodax-web-automation",
  "version": "1.0.0",
  "description": "Web Automation for SauceDemo using Playwright + TypeScript",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:chrome": "playwright test --project=chromium",
    "test:firefox": "playwright test --project=firefox",
    "test:safari": "playwright test --project=webkit",
    "test:smoke": "playwright test --grep @smoke",
    "test:login": "playwright test --grep @login",
    "report": "playwright show-report",
    "allure:generate": "allure generate allure-results -o allure-report --clean",
    "allure:open": "allure open allure-report",
    "allure:serve": "allure serve allure-results"
  },
  "keywords": ["playwright", "typescript", "automation", "testing", "saucedemo"],
  "author": "QA Automation Engineer",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.41.0",
    "@types/node": "^20.11.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "allure-playwright": "^2.15.1",
    "dotenv": "^16.3.1"
  }
}
